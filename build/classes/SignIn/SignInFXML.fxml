<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="SignIn.SignInFXMLController" vgap="5" GridPane.halignment="CENTER" hgap="5" >
    <padding><Insets top="10" bottom="10" left="25" right="25"/></padding>
    <Label text="User Sign In" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.halignment="CENTER" />
    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="usernameTextField" prefWidth="150"  />  
    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <PasswordField GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="passwordTextField" id="passwordTextField" prefWidth="150"  />  
    <Button text="Sign In" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2" fx:id="signInButton" GridPane.halignment="RIGHT" prefWidth="150" onAction="#logIn" />
</GridPane>
